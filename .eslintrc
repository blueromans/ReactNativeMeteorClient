{
    "extends": "standard",
    "parser": "babel-eslint",
        "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [ "react" ],

    "rules": {
      "semi": ["error", "always"],
      "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
      "comma-dangle": ["error", "always-multiline"],
      "indent": [2, 4, {
          "SwitchCase": 1,
          "VariableDeclarator": 1,
          "outerIIFEBody": 1,
          "FunctionDeclaration": {
            "parameters": 2,
            "body": 1
          },
          "FunctionExpression": {
            "parameters": 2,
            "body": 1
          }
      }],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
}
